/* ContentBlock */
@import '../../../stylesheets/config/settings.pcss';

.container {
  margin: 0 0 1rem;
}

.header {
  display: block;
  margin-bottom: 0.5rem;
  padding: 0.75rem;
  background: var(--color--primary);
}

.title {
  margin: 0;
  color: var(--color--secondary);
  font-size: 1.25rem;
  line-height: 1;
}

.body {
  position: relative;
  min-height: 100px;
  padding: 1rem;
  overflow: hidden;
  border: 1px dashed var(--color--primary);
}
